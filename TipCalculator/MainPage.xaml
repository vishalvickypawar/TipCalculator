<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TipCalculator.MainPage">

        <Grid Padding="5">
            <Grid.Resources>
                <Style TargetType="Frame" x:Key="centerFrame">
                    <Setter Property="HorizontalOptions" Value="Center"></Setter>
                    <Setter Property="VerticalOptions" Value="Center"></Setter>
                </Style>
                <Style TargetType="Button" x:Key="splitButton">
                    <Setter Property="BackgroundColor" Value="Orange"></Setter>
                    <Setter Property="VerticalOptions" Value="Center"></Setter>
                    <Setter Property="HeightRequest" Value="50"></Setter>
                    <Setter Property="WidthRequest" Value="50"></Setter>
                    <Setter Property="FontSize" Value="Body"></Setter>
                </Style>
                <Style TargetType="Label" x:Key="displayValue">
                    <Setter Property="FontSize" Value="15"></Setter>
                    <Setter Property="FontAttributes" Value="None"></Setter>
                </Style>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.20*"></RowDefinition>
                <RowDefinition Height="0.20*"></RowDefinition>
                <RowDefinition Height="0.15*"></RowDefinition>
                <RowDefinition Height="0.20*"></RowDefinition>
                <RowDefinition Height="0.12*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"></ColumnDefinition>
                <ColumnDefinition Width="0.5*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Frame Background="MediumPurple" Margin="10,10,10,10" Grid.ColumnSpan="2">
            <VerticalStackLayout Style="{StaticResource centerFrame}">
                <Label Text="ENTER BILL AMOUNT" Style="{StaticResource displayValue}"></Label>
                <Entry x:Name="tbTotal" Completed="tbTotal_Completed" Keyboard="Numeric" />
            </VerticalStackLayout>
        </Frame>
            <Frame Background="SteelBlue" Margin="10,10,5,5" Grid.Row="1">
                <VerticalStackLayout Style="{StaticResource centerFrame}">
                    <Label Text="TIP %" Style="{StaticResource displayValue}"></Label>
                    <Label x:Name="lblTip"></Label>
                </VerticalStackLayout>
            </Frame>
            <Frame Background="SeaGreen" Margin="5,10,10,5" Grid.Row="1" Grid.Column="1">
                <VerticalStackLayout Style="{StaticResource centerFrame}">
                    <Label Text="TIP AMOUNT" Style="{StaticResource displayValue}"></Label>
                    <Label x:Name="lblTipAmount"></Label>
            </VerticalStackLayout>
            </Frame>
            <Frame Background="RosyBrown" Margin="10,5,10,10" Grid.Row="2" Grid.ColumnSpan="2">
                <VerticalStackLayout>
                    <Label Text="SELECT TIP" Style="{StaticResource displayValue}"></Label>
                <Slider x:Name="slrTip" ValueChanged="slrTip_ValueChanged" Minimum="0" Maximum="100" />
            </VerticalStackLayout>
            </Frame>
            <Frame Background="SteelBlue" Margin="10,10,5,5" Grid.Row="3">
                <VerticalStackLayout Style="{StaticResource centerFrame}">
                    <Label Text="SPLIT BETWEEN" Style="{StaticResource displayValue}"></Label>
                    <Label x:Name="lblSplit"></Label>
                </VerticalStackLayout>
            </Frame>
            <Frame Background="SeaGreen" Margin="5,10,10,5" Grid.Row="3" Grid.Column="2">
                <VerticalStackLayout Style="{StaticResource centerFrame}">
                    <Label Text="SPLIT AMOUNT" Style="{StaticResource displayValue}"></Label>
                    <Label x:Name="lblSplitAmount"></Label>
                </VerticalStackLayout>
            </Frame>
            <Frame Background="RosyBrown" Margin="10,5,10,10" Grid.Row="4" Grid.ColumnSpan="2">
                <HorizontalStackLayout Style="{StaticResource centerFrame}">
                    <Button x:Name="btnMinus" Text="-" Style="{StaticResource splitButton}" Clicked="btnMinus_Clicked"></Button>
                    <Label Text="SELECT NO. OF PERSONS" Margin="10,5,10,5" Style="{StaticResource displayValue}"></Label>
                    <Button Text="+  " x:Name="brnPlus" Style="{StaticResource splitButton}" Clicked="brnPlus_Clicked"></Button>
                </HorizontalStackLayout>
            </Frame>
        </Grid>
</ContentPage>
